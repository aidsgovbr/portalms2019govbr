					<field name="font-awesome" type="radio" default="local" label="PLG_SYSTEM_BDTHEMES_SHORTCODES_FONT_AWESOME" description="PLG_SYSTEM_BDTHEMES_SHORTCODES_FONT_AWESOME_DESC" class="btn-group" >
